{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug fredboard",
      "type": "go",
      "request": "launch",
      "program": "${workspaceFolder}/cmd/fredboard/main.go",
      "outputMode": "remote",
      "env": {
        "FREDBOARD_CONFIG": "./.env/config.json"
      }
    },
    {
      "name": "Debug fredboard (with GUI)",
      "type": "go",
      "request": "launch",
      "program": "${workspaceFolder}/cmd/fredboard/main.go",
      "outputMode": "remote",
      "env": {
        "FREDBOARD_CONFIG": "./.env/config.json"
      },
      "buildFlags": "-tags=gui"
    },
    {
      "name": "Test current file",
      "type": "go",
      "mode": "test",
      "request": "launch",
      "program": "${file}",
      "outputMode": "remote",
      "env": {
        "FREDBOARD_CONFIG": "./.env/config.json"
      }
    }
  ]
}
